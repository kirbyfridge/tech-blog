<!-- MAIN -->
<main class="flex-grow">
    <h1>your posts</h1>

    <button type="submit" class="btn new-post-button"><a class="link" href="/dashboard/new">new post</a></button>

    <section>
        {{#if posts.length}}

            {{#each posts as |post|}}
                <div class="container row dashboard-container">
                    <div class="card-header dashboard-post">
                        <h4 class="card-title post-title"><a class="link" href="/dashboard/edit/{{id}}">{{title}}</a></h4>
                        <div class="card-body post-body">
                            <p class="card-body post-content">{{content}}</p>
                            <p class="card-text post-author">posted by <span class="post-username">{{user.username}}</span> on {{format_date created_at}}</p>
                        </div>
                    </div>
                </div>
            {{/each}}

        {{/if}}
    </section>
</main>

{{> footer}}